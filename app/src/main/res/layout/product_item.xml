<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:src="@drawable/jug_without_faucet" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jug without Faucet"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: 30 Php"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_decrease_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="-"
                    android:padding="0dp"
                    android:textSize="32sp"
                    android:backgroundTint="#376DA6"

                    android:gravity="center"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_quantity_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="1"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_increase_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="+"
                    android:backgroundTint="#376DA6"

                    android:padding="0dp"
                    android:textSize="24sp"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_total_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Total: 30 Php"
                android:textSize="16sp" />

            <!-- Order Button -->
            <Button
                android:id="@+id/btn_order_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order"
                android:visibility="gone"
                android:backgroundTint="#376DA6"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit product"
                android:textColor="@color/white"
                android:visibility="gone"
                android:backgroundTint="#2148DC"
                android:layout_marginTop="16dp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:layout_gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
